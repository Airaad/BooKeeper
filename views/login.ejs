<!-- page for logging in the user -->

<%- include("partials/header.ejs") %>
<main class="form-signin w-100 m-auto login ">
    <form action="/login" method="POST">
        <i class="fa-solid fa-bookmark fa-xl mb-4"></i>
        
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
    
        <div class="form-floating">
          <input type="email" class="form-control" id="floatingInput" name="username" placeholder="name@example.com">
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating password-component">
          <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password">
          <label for="floatingPassword">Password</label>
        </div>
    
        <button class="btn btn-dark w-100 py-2 my-3" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-body-secondary">Â© <%= currentYear %></p>
      </form>
  </main>
